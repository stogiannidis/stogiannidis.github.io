<script>
  function updateTime() {
    const el = document.getElementById('current-time');
    if (!el) return;
    const now = new Date();
    // Using Europe/London for Edinburgh
    const options: Intl.DateTimeFormatOptions = { hour: '2-digit', minute: '2-digit', timeZone: 'Europe/London' };
    el.textContent = now.toLocaleTimeString([], options);
  }
  updateTime();
  setInterval(updateTime, 60000);
</script>

